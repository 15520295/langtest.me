{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "react-native/react-native": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
      ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars":[
            "off"
        ],
        "no-unused-labels":[
            "off"
        ],
        "no-use-before-define": ["error", { "variables": false }]
    }
}